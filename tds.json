{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "area_information": {
      "type": "object",
      "properties": {
        "n": {
          "type": "string",
          "description": "The name of the area. Also includes the word area number (e.g. Ring 1: Limbo)"
        },
        "s": {
          "type": "string",
          "description": "Which area this area is a sub area of."
        },
        "r": {
          "type": "object",
          "description": "Requirements to access the area",
          "properties": {
            "p": {
              "type": "number",
              "description": "The number of tower points required to access this area",
              "minimum": 0,
              "default": 1
            },
            "ds": {
              "type": "object",
              "description": "The number of towers required of each difficulty level to access this area",
              "properties": {
                "easy": {
                  "type": "integer",
                  "minimum": 1,
                  "default": 1
                },
                "medium": {
                  "type": "integer",
                  "minimum": 1,
                  "default": 1
                },
                "hard": {
                  "type": "integer",
                  "minimum": 1,
                  "default": 1
                },
                "difficult": {
                  "type": "integer",
                  "minimum": 1,
                  "default": 1
                },
                "challenging": {
                  "type": "integer",
                  "minimum": 1,
                  "default": 1
                },
                "intense": {
                  "type": "integer",
                  "minimum": 1,
                  "default": 1
                },
                "remorseless": {
                  "type": "integer",
                  "minimum": 1,
                  "default": 1
                },
                "insane": {
                  "type": "integer",
                  "minimum": 1,
                  "default": 1
                },
                "extreme": {
                  "type": "integer",
                  "minimum": 1,
                  "default": 1
                },
                "terrifying": {
                  "type": "integer",
                  "minimum": 1,
                  "default": 1
                },
                "catastrophic": {
                  "type": "integer",
                  "minimum": 1,
                  "default": 1
                }
              }
            }
          },
          "required": [
            "p",
            "ds"
          ]
        },
        "t": {
          "type": "array",
          "description": "A list of towers that can be found in this area",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "n",
        "r",
        "t"
      ]
    }
  },
  "type": "object",
  "properties": {
    "areas": {
      "type": "object",
      "properties": {
        "permanent": {
          "type": "array",
          "description": "Information about towers that are perminately in the game.",
          "items": {
            "$ref": "#/definitions/area_information"
          }
        },
        "temporary": {
          "type": "array",
          "description": "Information about towers that are temporary in the game for an event.",
          "items": {
            "$ref": "#/definitions/area_information"
          }
        },
        "other": {
          "type": "array",
          "description": "Information about towers that are in the game and give a badgee yet don't count towards any progress",
          "items": {
            "$ref": "#/definitions/area_information"
          }
        }
      },
      "required": [
        "permanent",
        "temporary",
        "other"
      ]
    },
    "u": {
      "type": "string",
      "format": "date"
    }
  },
  "required": [
    "areas",
    "u"
  ]
}
